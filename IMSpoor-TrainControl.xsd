<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns="http://www.prorail.nl/IMSpoor" xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns:xml="http://www.w3.org/XML/1998/namespace" targetNamespace="http://www.prorail.nl/IMSpoor" elementFormDefault="qualified" attributeFormDefault="unqualified">
	<xs:include schemaLocation="https://raw.githubusercontent.com/XanderdenDuijn/IMX/master/IMSpoor-Groupings.xsd"/>
	<xs:element name="TrainControl">
		<xs:annotation>
			<xs:documentation>De elementen in deze XSD hebben betrekkeing op treinbeheersing.</xs:documentation>
		</xs:annotation>
		<xs:complexType>
			<xs:sequence>
				<xs:element ref="FlankProtectionConfigurations" minOccurs="0"/>
			</xs:sequence>
		</xs:complexType>
	</xs:element>
	<xs:element name="FlankProtectionConfigurations">
		<xs:annotation>
			<xs:documentation>Een verzameling eis- en verzoek wissel configuraties.</xs:documentation>
		</xs:annotation>
		<xs:complexType>
			<xs:sequence>
				<xs:element ref="FlankProtectionConfiguration" minOccurs="0" maxOccurs="unbounded"/>
			</xs:sequence>
		</xs:complexType>
	</xs:element>   
	<xs:element name="FlankProtectionConfiguration">
		<xs:annotation>
			<xs:documentation>Een eis- en/of verzoek wissel configuratie. Er is hier bewust gekozen voor redundante vastlegging van informatie omtrent eis- en/of wisselconfiguraties.</xs:documentation>
		</xs:annotation>
		<xs:complexType>
			<xs:complexContent>
				<xs:extension base="tTrainControlExtension">
					<xs:sequence>
						<xs:element ref="MandatoryFlankProtection" minOccurs="0" maxOccurs="unbounded"/>
						<xs:element ref="OptionalFlankProtection" minOccurs="0" maxOccurs="unbounded"/>
					</xs:sequence>
					<xs:attribute name="switchMechanismRef" type="tUUIDRef" use="required">
						<xs:annotation>
							<xs:documentation>Een PUIC verwijzing naar de wisselsteller'</xs:documentation>
							<xs:appinfo>
								<ObjectTypeRef>SwitchMechanism</ObjectTypeRef>
							</xs:appinfo>
						</xs:annotation>
					</xs:attribute>
					<xs:attribute name="position" type="tSwitchSideEnum" use="required">
						<xs:annotation>
							<xs:documentation>De stand van het wissel behorende bij de eis- en/of verzoekwissels.</xs:documentation>
						</xs:annotation>
					</xs:attribute>
				</xs:extension>
			</xs:complexContent>
		</xs:complexType>
	</xs:element>        
	<xs:complexType name="tTrainControlExtension">
		<xs:annotation>
			<xs:documentation>Een lege abstractie om aan te geven dat het object alleen aanvullende Trein Beheersing informatie bevat bovenop het 'hoofd-object'.</xs:documentation>
		</xs:annotation>
	</xs:complexType>
</xs:schema>